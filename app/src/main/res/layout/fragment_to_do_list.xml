                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="com.agileengine.leadandroidtesttask.todolist.fragment.ToDoListFragment">

    <include
        layout="@layout/fragment_recycle_view"
        />

    <android.support.design.widget.FloatingActionButton
